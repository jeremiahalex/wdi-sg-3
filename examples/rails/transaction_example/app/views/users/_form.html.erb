<%= form_for(user) do |f| %>
  <% if user.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(user.errors.count, "error") %> prohibited this user from being saved:</h2>

      <ul>
      <% user.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :name %>
    <%= f.text_field :name %>
  </div>

  <h3>Addresses</h3>
  <% @user.addresses.each do |add| %>
    <div>
      <%= add.street %>
      <a href="#">TODO Delete Link</a>
    </div>
  <% end %>
  <div class="field">
    <%= label_tag :street_name, "New Address" %>
    <%= text_field_tag :street_name %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
